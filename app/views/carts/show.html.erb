<% if notice %><p class="w3-panel"id="notice"><%= notice %></p><% end %>

<div class="w3-panel w3-aqua">

<div>Shopping Cart <%= @cart.id %> Contents</div>

<div>
 <table class="w3-table-all">
    
    <% @cart.line_items.each do |item| %>
    <tr>
    <td><%= item.quantity %> &times; </td><td><%= item.product.title %></td>
    </tr>
    <% end %>

 </table>
</div>

<div>

<%= button_to 'Empty cart', @cart, method: :delete, data: { confirm: 'Are you sure?' } , class:"w3-button w3-light-gray w3-border" %>
